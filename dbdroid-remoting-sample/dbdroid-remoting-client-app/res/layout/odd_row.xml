<?xml version="1.0" encoding="utf-8"?>
<TableRow
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/odd_row"
  android:layout_width="fill_parent"
  android:background="@color/odd_row" >
    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:background="@color/odd_row_cell" android:layout_margin="1dp" android:textColor="@color/even_row_cell" android:id="@+id/firstname"></TextView>
    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:background="@color/odd_row_cell" android:layout_margin="1dp" android:textColor="@color/even_row_cell" android:id="@+id/lastname"></TextView>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@color/odd_row_cell" android:layout_margin="1dp">
        <Button android:background="@drawable/edit" android:layout_gravity="right" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/edit"></Button>
    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@color/odd_row_cell" android:layout_margin="1dp">
        <Button android:background="@drawable/delete" android:layout_gravity="right" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/delete"></Button>
    </LinearLayout>
</TableRow>
